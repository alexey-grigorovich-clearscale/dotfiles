# WSL-specific hacks: use bold for everything
[color "diff"]
	old = red bold
	new = green bold
[color "status"]
	added = green bold
	changed = red bold
	untracked = red bold
[push]
	default = simple
[alias]
	lol = log --oneline --graph --decorate
[credential]
	helper = cache --timeout=900
